// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Feedback {
  id        String   @id @default(cuid())
  title     String
  message   String
  type      String   // "bug" | "idea" | "other" (vamos validar na API)
  status    String   @default("open") // "open" | "planned" | "done"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}